{
    "name": "@lugia/jverify",
    "version": "1.0.0",
    "description": "用于单元测试对象或方法打桩",
    "scripts": {
        "clean": "lugia-complie clean",
        "build": "lugia-complie lint && lugia-complie build",
        "dist": " npm run build && npm publish ./target --registry=http://192.168.102.79:5001/",
        "test": "lugia-complie lint -w & lugia-complie dev --watchAll & lugia-complie test --watchAll",
        "cov": "lugia-complie cov"
    },
    "devDependencies": {
        "@lugia/lugia-complie": "^1.0.3"
    },
    "dependencies": {
        "@lugia/type-utils": "^1.0.0",
        "chai": "^4.1.2",
        "deep-equal": "^1.0.1"
    },
    "author": "yss",
    "license": "MIT",
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,mjs}"
        ],
        "testMatch": [
            "<rootDir>/target/test/**/*.{js,jsx,mjs}"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "node",
            "mjs"
        ]
    }
}
