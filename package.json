{
    "name": "@lugia/jverify",
    "version": "1.0.5",
    "description": "用于单元测试对象或方法打桩",
    "scripts": {
        "build": "lugia-complie build",
        "dist": "lugia-complie build && lugia-complie publish",
        "dev": "lugia-complie dev --ig",
        "test-local": "lugia-complie test",
        "lint": "lugia-complie lint",
        "test": "lugia-complie lint && jest --watch",
        "cov": "lugia-complie cov"
    },
    "devDependencies": {
        "@lugia/lugia-complie": "^1.0.2"
    },
    "dependencies": {
        "@lugia/type-utils": "^1.0.1",
        "chai": "^4.1.2",
        "deep-equal": "^1.0.1"
    },
    "author": "yss",
    "license": "MIT",
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,mjs}"
        ],
        "testMatch": [
            "<rootDir>/target/test/**/*.{js,jsx,mjs}"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "node",
            "mjs"
        ]
    }
}
